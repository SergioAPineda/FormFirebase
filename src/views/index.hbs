<div class="col-md-6 offset-md-3">
  <div class="card">
    <div class="card-header">
      <h1>Tasks</h1>
    </div>
    <div class="card-body">
        {{#if contacts}}
          <ul class='list-group'>
            {{#each contacts}}
              <li class='list-group-item d-flex justify-content-between align-items-center'>
                {{firstname}}
                {{lastname}} /
                {{email}} /
                {{phone}}
                <a href="/delete-contact/{{@key}}" class= "btn btn-danger d-flex align-items-right">
                  Delete
                </a>
                <a href="/update-contact/{{@key}}" class= "btn btn-primary d-flex align-items-right">
                  Update
                </a>                
              </li>
            {{/each}}
          </ul>
        {{else}}
        <p>No contacts yet</p>
        {{/if}}
    </div>
    <div class="card-footer">
      <form action="/new-contact" method="POST">
        <div class="form-group">
          <input type="text" name='firstName' placeholder="first name" class= 'form-control' autofocus>
        </div>
                <div class="form-group">
          <input type="text" name='lastName' placeholder="last name" class= 'form-control' autofocus>
        </div>
                <div class="form-group">
          <input type="email" name='email' placeholder="email" class= 'form-control' autofocus>
        </div>
                <div class="form-group">
          <input type="n" name='phone' placeholder="phone" class= 'form-control' autofocus>
        </div>
        <button class="btn btn-primary btn-block">
          Add
        </button>
      </form>
    </div>
  </div>
</div>